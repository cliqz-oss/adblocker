{
  "compilerOptions": {
    "outDir": "build",
    "moduleResolution": "node",
    "module": "es6",
    "sourceMap": true,
    "importHelpers": true,
    "target": "ES6",
    "newLine": "lf",
    "allowJs": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "noImplicitAny": false,
    "removeComments": false
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "files": [
    "./background.ts"
  ]
}
