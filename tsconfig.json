{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "types": ["jest", "chrome", "node", "tldts"],
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "moduleResolution": "Node",
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "files": [
    "./index.ts",
    "./index-cosmetics.ts",
    "./index-matching.ts"
  ]
}
