{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "types": ["jest", "node"],
    "target": "ES3",
    "lib": ["ES6", "DOM"],
    "moduleResolution": "Node",
    "removeComments": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "files": [
    "./index.ts",
    "./index-cosmetics.ts",
    "./index-matching.ts"
  ]
}
