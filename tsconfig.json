{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "types": ["jest", "node", "chrome", "jsdom"],
    "target": "ES3",
    "lib": ["es2015", "ES6", "DOM"],
    "module": "ES6",
    "outDir": "build",
    "newLine": "lf",
    "esModuleInterop": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "files": [
    "./index.ts",
    "./index-cosmetics.ts"
  ]
}
