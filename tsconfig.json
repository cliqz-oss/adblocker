{
  "compilerOptions": {
    "outDir": "build",
    "moduleResolution": "node",
    "module": "commonjs",
    "importHelpers": true,
    "target": "ES6",
    "newLine": "lf",
    "allowJs": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "files": [
    "./index.ts",
    "./index-cosmetics.ts",
    "./index-matching.ts",
    "test/engine.test.ts",
    "test/injection.test.ts",
    "test/matching.test.js",
    "test/parsing.test.ts",
    "test/serialization.test.ts",
    "test/utils.js",
    "test/utils.test.ts"
  ]
}
